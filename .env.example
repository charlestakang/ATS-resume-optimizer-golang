  # ============================================
  # ResumeSync Pro - Environment Configuration
  # ============================================
  # Copy this file to .env and update values for your environment
  # NEVER commit .env file to version control

  # ============================================
  # Environment
  # ============================================
  NODE_ENV=development
  APP_ENV=development
  APP_NAME=ResumeSync Pro
  APP_VERSION=1.0.0

  # ============================================
  # Database Configuration
  # ============================================
  POSTGRES_USER=resumesync
  POSTGRES_PASSWORD=resumesync123
  POSTGRES_DB=resumesync_dev
  DATABASE_URL=postgresql://resumesync:resumesync123@localhost:5432/resumesync_dev
  DB_HOST=localhost
  DB_PORT=5432
  DB_SSL_MODE=disable
  DB_MAX_CONNECTIONS=100
  DB_MAX_IDLE_CONNECTIONS=10
  DB_MAX_LIFETIME_CONNECTIONS=2

  # ============================================
  # Redis Configuration
  # ============================================
  REDIS_HOST=localhost
  REDIS_PORT=6379
  REDIS_PASSWORD=
  REDIS_DB=0
  REDIS_URL=redis://localhost:6379/0
  REDIS_MAX_RETRIES=3
  REDIS_POOL_SIZE=10

  # ============================================
  # MinIO S3 Storage Configuration
  # ============================================
  MINIO_ROOT_USER=minioadmin
  MINIO_ROOT_PASSWORD=minioadmin123
  MINIO_ENDPOINT=localhost:9000
  MINIO_ACCESS_KEY=minioadmin
  MINIO_SECRET_KEY=minioadmin123
  MINIO_USE_SSL=false
  MINIO_BUCKET_NAME=resumesync-uploads
  MINIO_REGION=us-east-1
  STORAGE_TYPE=minio

  # ============================================
  # API Configuration
  # ============================================
  API_PORT=8080
  API_HOST=0.0.0.0
  API_BASE_URL=http://localhost:8080
  API_TIMEOUT=30
  API_MAX_REQUEST_SIZE=10485760
  API_RATE_LIMIT=100
  API_RATE_LIMIT_WINDOW=60
  CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8080
  CORS_ALLOWED_METHODS=GET,POST,PUT,DELETE,OPTIONS
  CORS_ALLOWED_HEADERS=Content-Type,Authorization

  # ============================================
  # Web Application Configuration
  # ============================================
  NEXT_PUBLIC_APP_URL=http://localhost:3000
  NEXT_PUBLIC_API_URL=http://localhost:8080
  NEXT_PUBLIC_WS_URL=ws://localhost:8080
  NEXT_PUBLIC_GOOGLE_ANALYTICS_ID=
  NEXT_PUBLIC_SENTRY_DSN=
  NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=

  # ============================================
  # Authentication & Security
  # ============================================
  JWT_SECRET=your-super-secret-jwt-key-change-in-production
  JWT_EXPIRY=24h
  JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-in-production
  JWT_REFRESH_EXPIRY=168h
  NEXTAUTH_URL=http://localhost:3000
  NEXTAUTH_SECRET=your-nextauth-secret-key-change-in-production
  BCRYPT_COST=10
  SESSION_SECRET=your-session-secret-key-change-in-production
  CSRF_SECRET=your-csrf-secret-key-change-in-production

  # ============================================
  # OAuth Providers
  # ============================================
  GOOGLE_CLIENT_ID=
  GOOGLE_CLIENT_SECRET=
  GITHUB_CLIENT_ID=
  GITHUB_CLIENT_SECRET=
  LINKEDIN_CLIENT_ID=
  LINKEDIN_CLIENT_SECRET=

  # ============================================
  # Email Configuration (SMTP)
  # ============================================
  SMTP_HOST=smtp.gmail.com
  SMTP_PORT=587
  SMTP_USER=
  SMTP_PASSWORD=
  SMTP_FROM_EMAIL=noreply@resumesync.pro
  SMTP_FROM_NAME=ResumeSync Pro
  EMAIL_VERIFICATION_EXPIRE=24h
  PASSWORD_RESET_EXPIRE=1h

  # ============================================
  # Payment Processing (Stripe)
  # ============================================
  STRIPE_SECRET_KEY=
  STRIPE_WEBHOOK_SECRET=
  STRIPE_PRICE_ID_MONTHLY=
  STRIPE_PRICE_ID_YEARLY=

  # ============================================
  # AI/ML Services
  # ============================================
  OPENAI_API_KEY=
  OPENAI_ORGANIZATION=
  OPENAI_MODEL=gpt-3.5-turbo
  AI_MAX_TOKENS=2000
  AI_TEMPERATURE=0.7

  # ============================================
  # Worker Configuration
  # ============================================
  WORKER_CONCURRENCY=5
  WORKER_MAX_RETRIES=3
  WORKER_TIMEOUT=300
  QUEUE_NAME=resumesync-jobs
  JOB_RETENTION_DAYS=30

  # ============================================
  # Monitoring & Logging
  # ============================================
  LOG_LEVEL=debug
  LOG_FORMAT=json
  LOG_OUTPUT=stdout
  SENTRY_DSN=
  SENTRY_ENVIRONMENT=development
  SENTRY_TRACES_SAMPLE_RATE=0.1
  PROMETHEUS_ENABLED=false
  PROMETHEUS_PORT=9090

  # ============================================
  # Development Tools
  # ============================================
  HOT_RELOAD=true
  DEBUG_MODE=true
  VERBOSE_LOGGING=true
  SQL_DEBUG=false
  PROFILING_ENABLED=false
  MOCK_EXTERNAL_SERVICES=false

  # ============================================
  # Feature Flags
  # ============================================
  FEATURE_AI_OPTIMIZATION=true
  FEATURE_BULK_UPLOAD=false
  FEATURE_TEAM_ACCOUNTS=false
  FEATURE_API_ACCESS=false
  FEATURE_WEBHOOK_NOTIFICATIONS=false
  FEATURE_ADVANCED_ANALYTICS=false

  # ============================================
  # Rate Limiting & Quotas
  # ============================================
  FREE_TIER_MONTHLY_LIMIT=3
  PRO_TIER_MONTHLY_LIMIT=100
  ENTERPRISE_TIER_MONTHLY_LIMIT=1000
  MAX_FILE_SIZE_MB=5
  MAX_FILES_PER_UPLOAD=3
  API_RATE_LIMIT_PER_MINUTE=60

  # ============================================
  # Miscellaneous
  # ============================================
  TZ=America/New_York
  DEFAULT_LOCALE=en-US
  SUPPORTED_LOCALES=en-US,es-ES,fr-FR
  MAINTENANCE_MODE=false
  MAINTENANCE_MESSAGE=We are currently performing scheduled maintenance